<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvComanda"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardBackgroundColor="@color/fui_transparent"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:paddingStart="5dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="0dp">

                <TextView
                    android:id="@+id/tvCantProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/cambo"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvProductOrden"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:fontFamily="@font/cambo"
                    android:text="TextView"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvDescripProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cambo"
                android:paddingStart="15dp"
                android:paddingEnd="5dp"
                android:text="TextView"
                android:textColor="@color/rojo"
                android:textSize="18sp"
                android:textStyle="bold|italic"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnMenosProducto"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                android:background="@color/fui_transparent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/baseline_remove_circle_24" />

            <ImageButton
                android:id="@+id/btnMasProducto"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                android:background="@color/fui_transparent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/baseline_add_circle_24" />

            <ImageButton
                android:id="@+id/btnRemoveProducto"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:background="@color/fui_transparent"
                android:scaleType="centerCrop"
                android:tint="@color/rojo"
                app:srcCompat="@drawable/baseline_delete_24" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>